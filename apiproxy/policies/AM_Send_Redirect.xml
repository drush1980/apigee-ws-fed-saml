        <Headers>
            <Header name="Location">{idpEndpoint}?wa=wsignin1.0&amp;wctx=rm=0&amp;wtrealm={issuer}&amp;wreply=https://{request.header.Host}{proxy.basepath}/callback</Header>
        </Headers>
    </Set>
</AssignMessage>